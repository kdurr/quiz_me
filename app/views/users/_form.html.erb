<%= simple_form_for [@user] do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name, required: false %>
  <%= f.input :username %>
  <%= f.input :age, required: true %>
  <%= f.input :email %>
  <%= f.input :encrypted_password, label: 'Password' %>
  <%= f.input :password_confirmation, label: 'Password Confirmation' %>
  <%= f.button :submit, "Sign Me Up!" %>
<%- end -%>